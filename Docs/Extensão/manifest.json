{
  "manifest_version": 3,
  "name": "ChatGuru Feedback - Click Cannabis",
  "version": "2.1.0",
  "description": "Extens√£o para registrar feedbacks de atendimento no ChatGuru",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://*.chatguru.app/*",
    "https://*.chatguru.com.br/*",
    "https://*.supabase.co/*",
    "https://api.openai.com/*",
    "https://*.amazonaws.com/*",
    "https://api.anthropic.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.chatguru.app/*",
        "https://*.chatguru.com.br/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
